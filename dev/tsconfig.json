{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "typeRoots": [
      "../src/types",
      "./node_modules/@types",
      "../node_modules/@types"
    ]
  }
}
